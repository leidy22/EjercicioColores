<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.athena.colores.MainActivity">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Azul" />

            <SeekBar
                android:id="@+id/id_seek_azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="128" />

            <TextView
                android:id="@+id/txt_azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_rojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rojo" />

            <SeekBar
                android:id="@+id/id_seek_rojo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:max="255"
                android:progress="128" />

            <TextView
                android:id="@+id/txt_rojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verde" />

            <SeekBar
                android:id="@+id/id_seek_verde"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="128" />

            <TextView
                android:id="@+id/txt_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha" />

            <SeekBar
                android:id="@+id/id_seek_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="128" />

            <TextView
                android:id="@+id/txt_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128" />
        </TableRow>

    </TableLayout>

    <FrameLayout
        android:id="@+id/id_background"
        android:layout_width="343dp"
        android:layout_height="376dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#80808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
